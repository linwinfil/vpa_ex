<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SampleLottieBlendActivity">


    <com.at.lottie.LottieBlendView
        android:id="@+id/lottie_view"
        android:layout_width="1080px"
        android:layout_height="0dp"
        app:blend_bg_fileName="lottie/bg/data.json"
        app:blend_bg_imageAssetsFolder="lottie/bg/images"
        app:blend_fg_fileName="lottie/fg/data.json"
        app:blend_fg_imageAssetsFolder="lottie/fg/images"
        app:blend_show_lottie="false"
        app:layout_constraintDimensionRatio="654:756"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start frames"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>